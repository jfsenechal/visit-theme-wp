<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thesaurus URN Browser</title>
    <style>
        * { box-sizing: border-box; margin: 0; padding: 0; }
        body { font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif; background: #f5f5f5; color: #333; padding: 2rem; }
        h1 { margin-bottom: 0.5rem; }
        .meta { color: #666; margin-bottom: 1.5rem; }
        .search-box { width: 100%; max-width: 500px; padding: 0.5rem 1rem; border: 1px solid #ccc; border-radius: 4px; font-size: 1rem; margin-bottom: 1.5rem; }
        .group { background: #fff; border: 1px solid #ddd; border-radius: 6px; margin-bottom: 1rem; }
        .group-header { padding: 0.75rem 1rem; background: #e9ecef; cursor: pointer; font-weight: 600; font-family: monospace; font-size: 0.95rem; border-radius: 6px 6px 0 0; display: flex; justify-content: space-between; align-items: center; }
        .group-header:hover { background: #dee2e6; }
        .group-header .badge { background: #6c757d; color: #fff; padding: 0.15rem 0.5rem; border-radius: 12px; font-size: 0.8rem; font-weight: normal; }
        .group-body { display: none; padding: 0; }
        .group.open .group-body { display: block; }
        .group.open .group-header { border-radius: 6px 6px 0 0; }
        .urn-row { padding: 0.4rem 1rem; border-top: 1px solid #eee; display: flex; gap: 1rem; align-items: baseline; }
        .urn-row:hover { background: #f8f9fa; }
        .urn-key { font-family: monospace; font-size: 0.85rem; color: #0056b3; min-width: 350px; flex-shrink: 0; }
        .urn-key a { color: inherit; text-decoration: none; }
        .urn-key a:hover { text-decoration: underline; }
        .urn-label { color: #555; font-size: 0.9rem; }
        .hidden { display: none !important; }
    </style>
</head>
<body>
    <h1>Thesaurus URN Browser</h1>
    <p class="meta">{{ totalCount }} URNs cached</p>

    <input type="text" class="search-box" id="search" placeholder="Filter URNs or labels..." autofocus>

    {% for prefix, urns in grouped %}
        <div class="group" data-prefix="{{ prefix }}">
            <div class="group-header" onclick="this.parentElement.classList.toggle('open')">
                <span>{{ prefix }}</span>
                <span class="badge">{{ urns|length }}</span>
            </div>
            <div class="group-body">
                {% for urn, label in urns %}
                    <div class="urn-row" data-search="{{ urn|lower }} {{ label|lower|default('') }}">
                        <span class="urn-key">
                            <a href="">{{ urn }}</a>
                        </span>
                        <span class="urn-label">{{ label|default('â€”') }}</span>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endfor %}

    <script>
        document.getElementById('search').addEventListener('input', function () {
            const query = this.value.toLowerCase().trim();
            document.querySelectorAll('.group').forEach(function (group) {
                let visibleCount = 0;
                group.querySelectorAll('.urn-row').forEach(function (row) {
                    const match = !query || row.dataset.search.includes(query);
                    row.classList.toggle('hidden', !match);
                    if (match) visibleCount++;
                });
                group.classList.toggle('hidden', visibleCount === 0);
                if (query && visibleCount > 0) {
                    group.classList.add('open');
                } else if (!query) {
                    group.classList.remove('open');
                }
            });
        });
    </script>
</body>
</html>

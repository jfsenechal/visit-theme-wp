{% if events|length > 0 %}
<section class="my-6">
    <h4 class="font-montserrat-bold text-caractere text-lg">{{ 'article.recommandation'|trans }}</h4>
    <div class="mt-6">
        <ul role="list" class="mt-3 flex flex-col">
            {% for item in events %}
                <li class="group rounded-md shadow-lg mb-2">
                    <a href="{{ item.url }}" class="flex">
                        <div class="flex shrink-0 items-center justify-center rounded-l-md transition-all duration-500 group-hover:opacity-75">
                            <img src="{{ item.getDefaultImage.url }}" alt="" class="h-28 w-28 aspect-square object-cover rounded-l-md" loading="lazy"/>
                        </div>
                        <div class="rounded-r-md border-t border-r border-b border-gray-200 bg-white w-full">
                            <div class="flex h-full flex-col justify-between px-4 py-4 text-sm">
                                <span class="block font-montserrat-semi-bold text-caractere group-hover:text-cta-light">
                                    {{ item.name }}
                                </span>
                                <div class="flex flex-row flex-wrap gap-2">
                                        <span class="font-montserrat-light text-caractere">
                                            {{ item.typeOffre.getLabelByLang(locale) }}
                                        </span>
                                </div>
                            </div>
                        </div>
                    </a>
                </li>
            {% endfor %}
        </ul>
    </div>
</section>
{% endif %}

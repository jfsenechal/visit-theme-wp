<div class="my-6">
    <h4 class="font-bold text-caractere text-lg">{{ 'article.recommandation'|trans }}</h4>
    <div class="mt-6">
        <ul role="list" class="mt-3 flex flex-col">
            {% for item in recommandations %}
                <li class="group rounded-md shadow-lg mb-2">
                    <a href="{{ item.url }}" class="flex">
                        <div class="flex shrink-0 items-center justify-center rounded-l-md transition-all duration-500 group-hover:opacity-75">
                            <img src="{{ item.image }}" alt="" class="h-28 w-28 aspect-square" loading="lazy"/>
                        </div>
                        <div class="rounded-r-md border-t border-r border-b border-gray-200 bg-white w-full">
                            <div class="flex h-full flex-col justify-between px-4 py-4 text-sm">
                            <span class="block font-semibold text-caractere group-hover:text-cta-light">
                              {{ item.name }}
                            </span>
                                <div class=" flex flex-row flex-wrap gap-2">
                                    {% for tag in item.tags|slice(0, 3) %}
                                        <span class="font-light text-caractere">
                                            {{ tag.name }}
                                        </span>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </a>
                </li>
            {% endfor %}
        </ul>
    </div>
</div>
{% if events|length > 0 %}
<section class="my-10">
    <div class="flex items-center gap-3 mb-6">
        <span class="inline-block w-1 h-6 rounded-full bg-cta-light"></span>
        <h4 class="font-montserrat font-bold text-caractere text-xl tracking-tight">{{ 'article.recommandation'|trans }}</h4>
    </div>
    <ul role="list" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-{{ events|length >= 4 ? 4 : events|length }} gap-5">
        {% for item in events %}
            <li class="group">
                <a href="{{ item.url }}"
                   class="flex flex-col h-full rounded-xl overflow-hidden bg-white shadow-md
                          ring-1 ring-gray-200/60
                          transition-all duration-300
                          hover:shadow-xl hover:-translate-y-1">
                    <div class="relative overflow-hidden aspect-4/3">
                        <img src="{{ item.getDefaultImage.url }}"
                             alt="{{ item.name }}"
                             class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-105"
                             loading="lazy"/>
                        <div class="absolute inset-0 bg-linear-to-t from-black/30 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                    </div>
                    <div class="flex flex-col flex-1 p-4">
                        <h5 class="font-montserrat font-semibold text-caractere leading-snug
                                   group-hover:text-cta-light transition-colors duration-300 line-clamp-2">
                            {{ item.name }}
                        </h5>
                        <span class="mt-2 inline-flex items-center self-start px-2.5 py-0.5 rounded-full text-xs font-medium
                                     bg-bglighter text-grey-basic">
                            {{ item.typeOffre.getLabelByLang(locale) }}
                        </span>
                    </div>
                </a>
            </li>
        {% endfor %}
    </ul>
</section>
{% endif %}

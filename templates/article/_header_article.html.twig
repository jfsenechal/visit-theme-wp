<div class="h-148">
    <div class="relative h-full w-full bg-linear-to-r from-pink-300/50 via-purple-300/50 to-indigo-400/50">
        {% if video is defined and video != '' %}
            <video class="w-full h-full object-cover object-center absolute mix-blend-overlay" controls autoplay loop
                   muted>
                <source
                        src="{{ video }}"
                        type="video/mp4"
                        poster="{{ image }}"
                />
                <img class="w-full h-full object-cover object-center absolute mix-blend-overlay"
                     src="{{ image ?? '' }}" alt=""/>
            </video>
        {% else %}
            <img class="w-full h-full object-cover object-center absolute mix-blend-overlay"
                 src="{{ image ?? '' }}" alt=""/>
        {% endif %}

        <div class="flex flex-col px-6 absolute left-0 bottom-4">
            <h2 class="text-white font-montserrat-semi-bold text-3xl mb-3">
                {{ name }}
            </h2>
            <a href="{{ returnUrl ?? '/' }}"
               class="flex items-center gap-1 self-start rounded-lg px-4 py-2.5
                      bg-white/90 backdrop-blur-sm shadow-md
                      font-montserrat font-semibold text-carto-main
                      ring-1 ring-white/30
                      transition-all duration-300
                      hover:bg-white hover:shadow-lg hover:text-cta-light
                      focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-white
                      group">
                <svg xmlns="http://www.w3.org/2000/svg"
                     class="h-5 w-5 shrink-0 transition-transform duration-300 motion-safe:group-hover:-translate-x-1 motion-safe:group-focus-visible:-translate-x-1"
                     viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd"
                          d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z"
                          clip-rule="evenodd"/>
                </svg>
                {{ 'url.back'|trans }} {{ returnName ?? "l'accueil" }}
            </a>
        </div>
    </div>
</div>

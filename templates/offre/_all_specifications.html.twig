{% for keyname,data in specs %}
    <h4 class="text-lg text-cta-dark">
        <strong>{{ data.category.labelByLanguage() }}</strong> {{ data.category.urn }}
    </h4>
    <div class="flex flex-col gap-2">
        {% for item in data.items %}
            <div class="grid grid-cols-[20rem_1fr]">
            <span class="font-montserrat-semi-bold text-cta-dark">
                {{ item.definition.labelByLanguage('fr') }}
            </span>
                <span class="text-caractere">
                {{ item.data|format_pivot_value|raw }} (type) {{ item.data.type }} -- {{ item.data.urn }}
            </span>
            </div>
        {% endfor %}
    </div>
{% endfor %}

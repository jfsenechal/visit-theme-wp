<a href="#main-content"
   class="sr-only focus:not-sr-only focus:absolute focus:top-2 focus:left-2 focus:z-100 focus:bg-white focus:px-4 focus:py-2 focus:text-sm focus:font-medium focus:text-gray-900 focus:shadow-lg focus:rounded-md">
    {{ 'skip.to.content'|trans }}
</a>
<header class="bg-white shadow-md sticky top-0 z-50" id="mainheader"
        @click.window="closeOnClickOutside($event)"
        x-data="headerSearch()"
>
    <div class="mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-20">
            <a href="/"
               class="shrink-0 rounded-md focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-cta-dark">
                <img alt="Visit Marche"
                     src="{{ template_uri() }}/assets/images/VisitLogoBlack.png"
                     width="2363" height="1286"
                     class="h-16 w-auto"/>
            </a>
            {% include '@Visit/header/_navigation.html.twig' %}
            <div class="flex items-center gap-4">
                {% include '@Visit/header/_languages_select.html.twig' %}
                {% include '@Visit/header/_icones_social.html.twig' %}
                {# Mobile menu button #}
                <button @click="openMobileMenu()"
                        type="button"
                        class="lg:hidden inline-flex items-center justify-center p-2 rounded-md text-gray-600 hover:text-gray-900 hover:bg-gray-100 transition-colors focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-cta-dark"
                        aria-label="{{ 'menu.name'|trans }}">
                    <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"
                         aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round"
                              d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"/>
                    </svg>
                </button>
            </div>
        </div>
    </div>

    {% include '@Visit/header/_menu_mobile.html.twig' %}

    <!-- Search modal-->
    {% include '@Visit/search/_modal.html.twig' %}
</header>
{% include '@Visit/cookies/_cookies.html.twig' %}

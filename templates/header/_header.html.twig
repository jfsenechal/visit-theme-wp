<a href="#main-content"
   class="sr-only focus:not-sr-only focus:absolute focus:top-2 focus:left-2 focus:z-100 focus:bg-white focus:px-4 focus:py-2 focus:text-sm focus:font-medium focus:text-gray-900 focus:shadow-lg focus:rounded-md">
    {{ 'skip.to.content'|trans }}
</a>
<header class="bg-white shadow-md sticky top-0 z-50" id="mainheader"
        @click.window="closeOnClickOutside($event)"
        x-data="headerSearch()"
>
    <div class="mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-20">
            <a href="/"
               class="shrink-0 rounded-md focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-cta-dark">
                <img alt="Visit Marche"
                     src="{{ template_uri() }}/assets/images/VisitLogoBlack.png"
                     width="2363" height="1286"
                     class="h-16 w-auto"/>
            </a>
            {% include '@Visit/header/_navigation.html.twig' %}
            <div class="flex items-center gap-4">
                {% include '@Visit/header/_languages_select.html.twig' %}
                {% include '@Visit/header/_icones_social.html.twig' %}
                {# Mobile menu button #}
                <button @click="openMobileMenu()"
                        type="button"
                        class="lg:hidden inline-flex items-center justify-center p-2 rounded-md text-gray-600 hover:text-gray-900 hover:bg-gray-100 transition-colors focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-cta-dark"
                        aria-label="{{ 'menu.name'|trans }}">
                    <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"/>
                    </svg>
                </button>
            </div>
        </div>
    </div>

    {# === Mobile menu panel === #}
    <div x-show="isMobileMenuOpen" x-cloak class="lg:hidden">
        {# Backdrop #}
        <div x-show="isMobileMenuOpen"
             x-transition:enter="transition ease-out duration-300"
             x-transition:enter-start="opacity-0"
             x-transition:enter-end="opacity-100"
             x-transition:leave="transition ease-in duration-200"
             x-transition:leave-start="opacity-100"
             x-transition:leave-end="opacity-0"
             @click="closeMobileMenu()"
             class="fixed inset-0 z-40 bg-black/50"
             aria-hidden="true"></div>

        {# Panel #}
        <nav x-show="isMobileMenuOpen"
             x-transition:enter="transition ease-out duration-300"
             x-transition:enter-start="translate-x-full"
             x-transition:enter-end="translate-x-0"
             x-transition:leave="transition ease-in duration-200"
             x-transition:leave-start="translate-x-0"
             x-transition:leave-end="translate-x-full"
             @keydown.escape.window="closeMobileMenu()"
             class="fixed inset-y-0 right-0 z-50 w-full max-w-sm bg-white shadow-2xl overflow-y-auto"
             aria-label="{{ 'menu.name'|trans }}">

            {# Close button #}
            <div class="flex items-center justify-between px-5 h-20 border-b border-gray-100">
                <a href="/" class="shrink-0" @click="closeMobileMenu()">
                    <img alt="Visit Marche"
                         src="{{ template_uri() }}/assets/images/VisitLogoBlack.png"
                         width="2363" height="1286"
                         class="h-12 w-auto"/>
                </a>
                <button @click="closeMobileMenu()"
                        type="button"
                        class="p-2 rounded-md text-gray-500 hover:text-gray-700 hover:bg-gray-100 transition-colors focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-cta-dark"
                        aria-label="{{ 'menu.close'|trans|default('Fermer le menu') }}">
                    <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/>
                    </svg>
                </button>
            </div>

            {# Search #}
            <div class="px-5 py-4 border-b border-gray-100">
                <button @click="closeMobileMenu(); $nextTick(() => openSearchModal())"
                        type="button"
                        class="w-full flex items-center gap-3 px-4 py-3 rounded-xl bg-bglighter text-grey-basic text-sm transition-colors hover:bg-gray-200">
                    <svg class="w-5 h-5 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z"/>
                    </svg>
                    {{ 'search.name'|trans }}
                </button>
            </div>

            {# Navigation links #}
            <ul class="px-3 py-4 space-y-1 list-none">
                <li>
                    <a href="/" @click="closeMobileMenu()"
                       class="block px-4 py-3 rounded-lg font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50 transition-colors">
                        {{ 'menu.home'|trans }}
                    </a>
                </li>
                <li>
                    <a href="{{ items.idees.url }}" @click="closeMobileMenu()"
                       class="block px-4 py-3 rounded-lg font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50 transition-colors">
                        {{ items.idees.name }}
                    </a>
                </li>
                <li>
                    <a href="{{ items.inspirations.url }}" @click="closeMobileMenu()"
                       class="block px-4 py-3 rounded-lg font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50 transition-colors">
                        {{ items.inspirations.name }}
                    </a>
                </li>
                <li>
                    <a href="{{ items.agenda.url }}" @click="closeMobileMenu()"
                       class="block px-4 py-3 rounded-lg font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50 transition-colors">
                        {{ items.agenda.name }}
                    </a>
                </li>

                {# S'organiser submenu #}
                <li x-data="{ open: false }">
                    <button @click="open = !open"
                            type="button"
                            class="w-full flex items-center justify-between px-4 py-3 rounded-lg font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50 transition-colors"
                            :aria-expanded="open.toString()">
                        {{ items.sorganiser.name }}
                        <svg class="w-5 h-5 transition-transform duration-200" :class="open && 'rotate-180'"
                             fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5"/>
                        </svg>
                    </button>
                    <ul x-show="open"
                        x-transition:enter="transition ease-out duration-150"
                        x-transition:enter-start="opacity-0 -translate-y-1"
                        x-transition:enter-end="opacity-100 translate-y-0"
                        class="mt-1 ml-4 space-y-1 list-none">
                        <li>
                            <a href="{{ items.savourer.url }}" @click="closeMobileMenu()"
                               class="block px-4 py-2.5 rounded-lg text-gray-600 hover:text-gray-900 hover:bg-gray-50 transition-colors">
                                {{ items.savourer.name }}
                            </a>
                        </li>
                        <li>
                            <a href="{{ items.barbecue.url }}" @click="closeMobileMenu()"
                               class="block px-4 py-2.5 rounded-lg text-gray-600 hover:text-gray-900 hover:bg-gray-50 transition-colors">
                                {{ items.barbecue.name }}
                            </a>
                        </li>
                        <li>
                            <a href="{{ items.sejourner.url }}" @click="closeMobileMenu()"
                               class="block px-4 py-2.5 rounded-lg text-gray-600 hover:text-gray-900 hover:bg-gray-50 transition-colors">
                                {{ items.sejourner.name }}
                            </a>
                        </li>
                        <li>
                            <a href="{{ items.mice.url }}" @click="closeMobileMenu()"
                               class="block px-4 py-2.5 rounded-lg text-gray-600 hover:text-gray-900 hover:bg-gray-50 transition-colors">
                                {{ items.mice.name }}
                            </a>
                        </li>
                    </ul>
                </li>

                {# Decouvrir submenu #}
                <li x-data="{ open: false }">
                    <button @click="open = !open"
                            type="button"
                            class="w-full flex items-center justify-between px-4 py-3 rounded-lg font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50 transition-colors"
                            :aria-expanded="open.toString()">
                        {{ items.decouvrir.name }}
                        <svg class="w-5 h-5 transition-transform duration-200" :class="open && 'rotate-180'"
                             fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5"/>
                        </svg>
                    </button>
                    <ul x-show="open"
                        x-transition:enter="transition ease-out duration-150"
                        x-transition:enter-start="opacity-0 -translate-y-1"
                        x-transition:enter-end="opacity-100 translate-y-0"
                        class="mt-1 ml-4 space-y-1 list-none">
                        <li>
                            <a href="{{ items.arts.url }}" @click="closeMobileMenu()"
                               class="block px-4 py-2.5 rounded-lg text-gray-600 hover:text-gray-900 hover:bg-gray-50 transition-colors">
                                {{ items.arts.name }}
                            </a>
                        </li>
                        <li>
                            <a href="{{ items.balades.url }}" @click="closeMobileMenu()"
                               class="block px-4 py-2.5 rounded-lg text-gray-600 hover:text-gray-900 hover:bg-gray-50 transition-colors">
                                {{ items.balades.name }}
                            </a>
                        </li>
                        <li>
                            <a href="{{ items.fetes.url }}" @click="closeMobileMenu()"
                               class="block px-4 py-2.5 rounded-lg text-gray-600 hover:text-gray-900 hover:bg-gray-50 transition-colors">
                                {{ items.fetes.name }}
                            </a>
                        </li>
                        <li>
                            <a href="{{ items.gourmandises.url }}" @click="closeMobileMenu()"
                               class="block px-4 py-2.5 rounded-lg text-gray-600 hover:text-gray-900 hover:bg-gray-50 transition-colors">
                                {{ items.gourmandises.name }}
                            </a>
                        </li>
                        <li>
                            <a href="https://circuit-court.marche.be/" target="_blank" rel="noopener noreferrer"
                               @click="closeMobileMenu()"
                               class="block px-4 py-2.5 rounded-lg text-gray-600 hover:text-gray-900 hover:bg-gray-50 transition-colors">
                                {{ 'local.products'|trans }}
                            </a>
                        </li>
                        <li>
                            <a href="{{ items.patrimoine.url }}" @click="closeMobileMenu()"
                               class="block px-4 py-2.5 rounded-lg text-gray-600 hover:text-gray-900 hover:bg-gray-50 transition-colors">
                                {{ items.patrimoine.name }}
                            </a>
                        </li>
                    </ul>
                </li>

                <li>
                    <a href="{{ items.pratique.url }}" @click="closeMobileMenu()"
                       class="block px-4 py-3 rounded-lg font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50 transition-colors">
                        {{ items.pratique.name }}
                    </a>
                </li>
            </ul>

            {# Social links #}
            <div class="px-5 py-4 border-t border-gray-100">
                <div class="flex items-center justify-center gap-4">
                    <a href="https://www.facebook.com/VisitMarcheenfamenne" class="text-gray-400 hover:text-cta-dark transition-colors" aria-label="Facebook">
                        <svg fill="currentColor" viewBox="0 0 24 24" aria-hidden="true" class="w-6 h-6">
                            <path fill-rule="evenodd"
                                  d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z"
                                  clip-rule="evenodd"/>
                        </svg>
                    </a>
                    <a href="https://www.instagram.com/visitmarcheenfamenne" class="text-gray-400 hover:text-cta-dark transition-colors" aria-label="Instagram">
                        <svg fill="currentColor" viewBox="0 0 24 24" aria-hidden="true" class="w-6 h-6">
                            <path fill-rule="evenodd"
                                  d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z"
                                  clip-rule="evenodd"/>
                        </svg>
                    </a>
                    <a href="https://www.youtube.com/user/VilledeMarche" class="text-gray-400 hover:text-cta-dark transition-colors" aria-label="Youtube">
                        <svg fill="currentColor" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 19.17 13.6" class="w-6 h-6">
                            <path d="M18.77 2.13A2.4 2.4 0 0 0 17.09.42C15.59 0 9.58 0 9.58 0a57.55 57.55 0 0 0-7.5.4A2.49 2.49 0 0 0 .39 2.13 26.27 26.27 0 0 0 0 6.8a26.15 26.15 0 0 0 .39 4.67 2.43 2.43 0 0 0 1.69 1.71c1.52.42 7.5.42 7.5.42a57.69 57.69 0 0 0 7.51-.4 2.4 2.4 0 0 0 1.68-1.71 25.63 25.63 0 0 0 .4-4.67 24 24 0 0 0-.4-4.69zM7.67 9.71V3.89l5 2.91z"/>
                        </svg>
                    </a>
                </div>
            </div>
        </nav>
    </div>

    <!-- Search modal-->
    {% include '@Visit/search/_modal.html.twig' %}
</header>

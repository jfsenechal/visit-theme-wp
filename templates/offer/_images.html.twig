{% if offer.images|length > 1 %}
    <div>
        <div>
            {% for media in offer.images %}
                <div>
                    <img src="{{ media.url }}" alt="{{ media.name ?? offer.nom }}" loading="lazy"/>
                </div>
            {% endfor %}
        </div>
        <div></div>
        <div></div>
    </div>
    <!-- Initialize Swiper -->
    <script>
        var swiper = new Swiper(".mySwiper", {
            navigation: {
                nextEl: ".swiper-button-next",
                prevEl: ".swiper-button-prev",
            },
        });
    </script>
{% elseif offer.images|length > 0 %}
    <img src="{{ offer.images[0].url }}" alt="{{ offer.images[0].name ?? offer.nom }}" loading="lazy"/>
{% endif %}

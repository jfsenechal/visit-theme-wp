{% if offer.images|length > 0 %}
    <div x-data="{ lightbox: false, current: 0, images: {{ offer.images|map(i => { url: i.url, alt: i.name ?? offer.nom, copyright: i.copyright ?? '' })|json_encode }} }"
         x-on:keydown.escape.window="lightbox = false"
         x-on:keydown.arrow-right.window="if (lightbox) current = (current + 1) % images.length"
         x-on:keydown.arrow-left.window="if (lightbox) current = (current - 1 + images.length) % images.length">

        {# ── Thumbnail grid ── #}
        <div class="grid grid-cols-3 sm:grid-cols-4 md:grid-cols-5 xl:grid-cols-6 gap-2">
            {% for media in offer.images %}
                <button type="button"
                        @click="current = {{ loop.index0 }}; lightbox = true"
                        class="group aspect-square overflow-hidden rounded-lg focus:outline-none focus:ring-2 focus:ring-cta-dark">
                    <img src="{{ media.url }}"
                         alt="{{ media.name ?? offer.nom }}"
                         class="h-full w-full object-cover transition-transform duration-200 group-hover:scale-105"
                         loading="lazy"/>
                </button>
            {% endfor %}
        </div>

        {# ── Fullscreen lightbox ── #}
        <div x-show="lightbox"
             x-transition:enter="transition ease-out duration-200"
             x-transition:enter-start="opacity-0"
             x-transition:enter-end="opacity-100"
             x-transition:leave="transition ease-in duration-150"
             x-transition:leave-start="opacity-100"
             x-transition:leave-end="opacity-0"
             class="fixed inset-0 z-50 flex items-center justify-center bg-black/90"
             @click.self="lightbox = false"
             x-cloak>

            {# Close button #}
            <button @click="lightbox = false"
                    class="absolute top-4 right-4 z-10 flex h-10 w-10 items-center justify-center rounded-full bg-white/10 text-white hover:bg-white/20 transition"
                    aria-label="{{ 'offer.close'|trans|default('Fermer') }}">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/>
                </svg>
            </button>

            {# Counter #}
            <div class="absolute top-4 left-4 text-white/70 text-sm" x-text="(current + 1) + ' / ' + images.length"></div>

            {# Previous button #}
            <button @click="current = (current - 1 + images.length) % images.length"
                    class="absolute left-2 sm:left-4 z-10 flex h-12 w-12 items-center justify-center rounded-full bg-white/10 text-white hover:bg-white/20 transition"
                    aria-label="{{ 'offer.prev_image'|trans|default('Image précédente') }}">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7"/>
                </svg>
            </button>

            {# Current image #}
            <div class="flex items-center justify-center max-h-[85vh] max-w-[90vw]">
                <img :src="images[current].url"
                     :alt="images[current].alt"
                     class="max-h-[85vh] max-w-[90vw] object-contain select-none"
                loading="lazy"/>
            </div>

            {# Next button #}
            <button @click="current = (current + 1) % images.length"
                    class="absolute right-2 sm:right-4 z-10 flex h-12 w-12 items-center justify-center rounded-full bg-white/10 text-white hover:bg-white/20 transition"
                    aria-label="{{ 'offer.next_image'|trans|default('Image suivante') }}">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"/>
                </svg>
            </button>

            {# Copyright #}
            <div x-show="images[current].copyright"
                 x-text="images[current].copyright"
                 class="absolute bottom-4 left-1/2 -translate-x-1/2 text-white/50 text-xs"></div>
        </div>
    </div>
{% endif %}

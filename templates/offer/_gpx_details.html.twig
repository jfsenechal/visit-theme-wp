{% if gpx != null %}
    <h3>
        Détails du parcours
    </h3>
    <div>
        <div>
           {# <span>Distance</span>
            <span>{{ offer.gpx_distance }} km</span>

            <span>Durée du parcours</span>
            <span>{{ offer.gpx_duree }}</span>

            <span>Niveau de difficulté</span>
            <span>{{ offer.gpx_difficulte }}</span>

            {% if offer.gpx_type_circuit != null %}
                <span>
                {{ offer.gpx_type_circuit.urnDefinition.labelByLanguage(locale) }}
            </span>
                <span>{{ offer.gpx_type_circuit.data|format_pivot_value }}</span>
            {% endif %}

            {% if offer.gpx_cat_circuit != null %}
                <span>
                {{ offer.gpx_cat_circuit.urnDefinition.labelByLanguage(locale) }}
            </span>
                <span>{{ offer.gpx_cat_circuit.data|format_pivot_value }}</span>
            {% endif %}#}

            <span>Télécharger le gpx</span>
            <span>
                {% for gpx in offer.gpxs %}
                    <a href="{{ template_uri() }}/downloader.php?codecgt={{ gpx.codeCgt }}" rel="nofollow">
                          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                               stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round"
                              d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5M16.5 12L12 16.5m0 0L7.5 12m4.5 4.5V3"/>
                    </svg>
                        Télécharger
                    </a>
                {% endfor %}
            </span>
        </div>
    </div>
{% endif %}

{% set detail = offer.specificationDetail %}

{% if detail %}
    <section class="mt-8">
        {# ── Welcome & Accessibility ── #}
        {% set activeWelcomeFlags = detail.welcomeFlags|filter(v => v) %}
        {% if activeWelcomeFlags|length > 0 or detail.openingIndications %}
            <div class="mb-6">
                <h3 class="font-montserrat-semi-bold text-lg text-caractere mb-3 flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                         stroke="currentColor" class="w-5 h-5 text-cta-dark">
                        <path stroke-linecap="round" stroke-linejoin="round"
                              d="M15.182 15.182a4.5 4.5 0 01-6.364 0M21 12a9 9 0 11-18 0 9 9 0 0118 0zM9.75 9.75c0 .414-.168.75-.375.75S9 10.164 9 9.75 9.168 9 9.375 9s.375.336.375.75zm-.375 0h.008v.015h-.008V9.75zm5.625 0c0 .414-.168.75-.375.75s-.375-.336-.375-.75.168-.75.375-.75.375.336.375.75zm-.375 0h.008v.015h-.008V9.75z"/>
                    </svg>
                    {{ 'offer.welcome'|trans|default('Accueil & accessibilité') }}
                </h3>

                <div class="flex flex-wrap gap-2">
                    {% for name, active in detail.welcomeFlags %}
                        {% if active %}
                            <span class="inline-flex items-center gap-1.5 rounded-md bg-purple-50 px-3 py-1.5 text-sm text-purple-800 ring-1 ring-purple-200/80 ring-inset">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor"
                                     class="w-3.5 h-3.5 text-purple-500">
                                    <path fill-rule="evenodd"
                                          d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.05-.143z"
                                          clip-rule="evenodd"/>
                                </svg>
                                {{ name }}
                            </span>
                        {% endif %}
                    {% endfor %}
                </div>

                {% if detail.openingIndications %}
                    <p class="mt-3 text-sm text-gray-600">{{ detail.openingIndications|raw }}</p>
                {% endif %}
            </div>
        {% endif %}

        {# ── Equipment & Services ── #}
        {% set activeEquipments = detail.equipments|filter(v => v) %}
        {% if activeEquipments|length > 0 or detail.equipmentOther %}
            <div class="mb-6">
                <h3 class="font-montserrat-semi-bold text-lg text-caractere mb-3 flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                         stroke="currentColor" class="w-5 h-5 text-cta-dark">
                        <path stroke-linecap="round" stroke-linejoin="round"
                              d="M11.42 15.17L17.25 21A2.652 2.652 0 0021 17.25l-5.877-5.877M11.42 15.17l2.496-3.03c.317-.384.74-.626 1.208-.766M11.42 15.17l-4.655 5.653a2.548 2.548 0 11-3.586-3.586l6.837-5.63m5.108-.233c.55-.164 1.163-.188 1.743-.14a4.5 4.5 0 004.486-6.336l-3.276 3.277a3.004 3.004 0 01-2.25-2.25l3.276-3.276a4.5 4.5 0 00-6.336 4.486c.049.58.025 1.194-.14 1.743"/>
                    </svg>
                    {{ 'offer.equipments'|trans|default('Equipements & services') }}
                </h3>

                <div class="flex flex-wrap gap-2">
                    {% for name, active in detail.equipments %}
                        {% if active %}
                            <span class="inline-flex items-center gap-1.5 rounded-md bg-blue-50 px-3 py-1.5 text-sm text-blue-800 ring-1 ring-blue-200/80 ring-inset">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor"
                                     class="w-3.5 h-3.5 text-blue-500">
                                    <path fill-rule="evenodd"
                                          d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.05-.143z"
                                          clip-rule="evenodd"/>
                                </svg>
                                {{ name }}
                            </span>
                        {% endif %}
                    {% endfor %}
                </div>

                {% if detail.equipmentOther %}
                    <p class="mt-2 text-sm text-gray-600 italic">{{ detail.getEquipmentOther(locale) }}</p>
                {% endif %}
            </div>
        {% endif %}

        {# ── Classification & Awards ── #}
        {% if detail.classificationValue or detail.michelinStars or detail.isBibGourmand or detail.gaultMillauToques %}
            <div class="mb-6">
                <h3 class="font-montserrat-semi-bold text-lg text-caractere mb-3 flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                         stroke="currentColor" class="w-5 h-5 text-cta-dark">
                        <path stroke-linecap="round" stroke-linejoin="round"
                              d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.562.562 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.562.562 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z"/>
                    </svg>
                    {{ 'offer.classification'|trans|default('Classification') }}
                </h3>

                <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
                    {% if detail.classificationValue %}
                        <div class="flex items-center gap-3 rounded-lg bg-gray-50 px-4 py-3">
                            <div class="flex gap-0.5">
                                {% for i in 1..detail.classificationValue %}
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"
                                         class="w-5 h-5 text-yellow-400">
                                        <path fill-rule="evenodd"
                                              d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.006 5.404.434c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.434 2.082-5.005Z"
                                              clip-rule="evenodd"/>
                                    </svg>
                                {% endfor %}
                            </div>
                            <span class="text-sm text-caractere">
                                {{ detail.classificationTitle ?? '' }}
                                {% if detail.isSuperior %}
                                    <span class="ml-1 text-xs font-medium text-cta-dark">Supérieur</span>
                                {% endif %}
                            </span>
                        </div>
                    {% endif %}

                    {% if detail.michelinStars %}
                        <div class="flex items-center gap-3 rounded-lg bg-red-50 px-4 py-3">
                            <div class="flex gap-0.5">
                                {% for i in 1..detail.michelinStars %}
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"
                                         class="w-5 h-5 text-red-500">
                                        <path fill-rule="evenodd"
                                              d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.006 5.404.434c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.434 2.082-5.005Z"
                                              clip-rule="evenodd"/>
                                    </svg>
                                {% endfor %}
                            </div>
                            <span class="text-sm text-caractere font-medium">
                                {{ detail.michelinTitle ?? 'Michelin' }}
                            </span>
                        </div>
                    {% endif %}

                    {% if detail.isBibGourmand %}
                        <div class="flex items-center gap-3 rounded-lg bg-red-50 px-4 py-3">
                            <span class="text-sm font-medium text-red-600">Bib Gourmand</span>
                        </div>
                    {% endif %}

                    {% if detail.gaultMillauToques %}
                        <div class="flex items-center gap-3 rounded-lg bg-amber-50 px-4 py-3">
                            <span class="text-sm text-caractere">
                                <span class="font-medium">{{ detail.gaultMillauTitle ?? 'Gault & Millau' }}</span>
                                — {{ detail.gaultMillauToques }} toque{{ detail.gaultMillauToques > 1 ? 's' : '' }}
                            </span>
                        </div>
                    {% endif %}
                </div>
            </div>
        {% endif %}

        {# ── Labels & Quality ── #}
        {% if detail.labels|length > 0 %}
            <div class="mb-6">
                <h3 class="font-montserrat-semi-bold text-lg text-caractere mb-3 flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                         stroke="currentColor" class="w-5 h-5 text-cta-dark">
                        <path stroke-linecap="round" stroke-linejoin="round"
                              d="M9 12.75L11.25 15 15 9.75M21 12c0 1.268-.63 2.39-1.593 3.068a3.745 3.745 0 01-1.043 3.296 3.745 3.745 0 01-3.296 1.043A3.745 3.745 0 0112 21c-1.268 0-2.39-.63-3.068-1.593a3.746 3.746 0 01-3.296-1.043 3.745 3.745 0 01-1.043-3.296A3.745 3.745 0 013 12c0-1.268.63-2.39 1.593-3.068a3.745 3.745 0 011.043-3.296 3.746 3.746 0 013.296-1.043A3.746 3.746 0 0112 3c1.268 0 2.39.63 3.068 1.593a3.746 3.746 0 013.296 1.043 3.745 3.745 0 011.043 3.296A3.745 3.745 0 0121 12z"/>
                    </svg>
                    {{ 'offer.labels'|trans|default('Labels') }}
                </h3>

                <div class="flex flex-wrap gap-2">
                    {% for name, label in detail.labels %}
                        <span class="inline-flex items-center gap-1 rounded-full bg-green-50 px-3 py-1.5 text-sm text-green-800 ring-1 ring-green-200/80 ring-inset">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor"
                                 class="w-4 h-4">
                                <path fill-rule="evenodd"
                                      d="M16.403 12.652a3 3 0 000-5.304 3 3 0 00-3.75-3.751 3 3 0 00-5.305 0 3 3 0 00-3.751 3.75 3 3 0 000 5.305 3 3 0 003.75 3.751 3 3 0 005.305 0 3 3 0 003.751-3.75zm-2.546-4.46a.75.75 0 00-1.214-.883l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z"
                                      clip-rule="evenodd"/>
                            </svg>
                            {{ label }}
                        </span>
                    {% endfor %}
                </div>
            </div>
        {% endif %}

        {# ── Circuit / Distance ── #}
        {% if detail.circuitType or detail.distance %}
            <div class="mb-6">
                <h3 class="font-montserrat-semi-bold text-lg text-caractere mb-3 flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                         stroke="currentColor" class="w-5 h-5 text-cta-dark">
                        <path stroke-linecap="round" stroke-linejoin="round"
                              d="M9 6.75V15m6-6v8.25m.503 3.498l4.875-2.437c.381-.19.622-.58.622-1.006V4.82c0-.836-.88-1.38-1.628-1.006l-3.869 1.934c-.317.159-.69.159-1.006 0L9.503 3.252a1.125 1.125 0 00-1.006 0L3.622 5.689C3.24 5.88 3 6.27 3 6.695V19.18c0 .836.88 1.38 1.628 1.006l3.869-1.934c.317-.159.69-.159 1.006 0l4.994 2.497c.317.158.69.158 1.006 0z"/>
                    </svg>
                    {{ 'offer.circuit'|trans|default('Parcours') }}
                </h3>

                <div class="flex flex-wrap gap-4">
                    {% if detail.circuitType %}
                        <div class="flex items-center gap-2 rounded-lg bg-gray-50 px-4 py-2">
                            <span class="text-sm font-medium text-cta-dark">Type</span>
                            <span class="text-sm text-caractere">{{ detail.circuitType }}</span>
                        </div>
                    {% endif %}
                    {% if detail.distance %}
                        <div class="flex items-center gap-2 rounded-lg bg-gray-50 px-4 py-2">
                            <span class="text-sm font-medium text-cta-dark">Distance</span>
                            <span class="text-sm text-caractere">{{ detail.distance }} km</span>
                        </div>
                    {% endif %}
                </div>
            </div>
        {% endif %}

        {# ── Recommendation ── #}
        {% if detail.recommendation %}
            <div class="mb-6 rounded-lg border border-amber-200 bg-amber-50 p-4">
                <div class="flex items-start gap-3">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                         stroke="currentColor" class="w-5 h-5 mt-0.5 text-amber-600 shrink-0">
                        <path stroke-linecap="round" stroke-linejoin="round"
                              d="M6.633 10.25c.806 0 1.533-.446 2.031-1.08a9.041 9.041 0 012.861-2.4c.723-.384 1.35-.956 1.653-1.715a4.498 4.498 0 00.322-1.672V3a.75.75 0 01.75-.75 2.25 2.25 0 012.25 2.25c0 1.152-.26 2.243-.723 3.218-.266.558.107 1.282.725 1.282h3.126c1.026 0 1.945.694 2.054 1.715.045.422.068.85.068 1.285a11.95 11.95 0 01-2.649 7.521c-.388.482-.987.729-1.605.729H14.23c-.483 0-.964-.078-1.423-.23l-3.114-1.04a4.501 4.501 0 00-1.423-.23H5.904m.729-14.1a3 3 0 00-2.384 1.172C3.528 8.39 3 9.62 3 11v4.5a3 3 0 006 0V10.25"/>
                    </svg>
                    <div>
                        <span class="block text-sm font-medium text-amber-800 mb-1">{{ 'offer.recommendation'|trans|default('Recommandation') }}</span>
                        <p class="text-sm text-amber-700">{{ detail.recommendation }}</p>
                    </div>
                </div>
            </div>
        {% endif %}

        {# ── Homepage Link ──
        {% if detail.homepage %}
            <div class="mb-6">
                <a href="{{ detail.homepage }}" target="_blank" rel="noopener"
                   class="inline-flex items-center gap-2 rounded-md bg-gray-100 px-4 py-2 text-sm text-caractere hover:bg-cta-light hover:text-white transition-colors duration-200">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                         stroke="currentColor" class="w-4 h-4">
                        <path stroke-linecap="round" stroke-linejoin="round"
                              d="M12 21a9.004 9.004 0 008.716-6.747M12 21a9.004 9.004 0 01-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 017.843 4.582M12 3a8.997 8.997 0 00-7.843 4.582m15.686 0A11.953 11.953 0 0112 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0121 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0112 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 013 12c0-1.605.42-3.113 1.157-4.418"/>
                    </svg>
                    {{ 'offer.website'|trans|default('Site web') }}
                </a>
            </div>
        {% endif %}#}

        {# ── Signage ── #}
        {% if detail.signage %}
            <div class="mb-6">
                <div class="flex items-center gap-2 rounded-lg bg-gray-50 px-4 py-3">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                         stroke="currentColor" class="w-5 h-5 text-cta-dark shrink-0">
                        <path stroke-linecap="round" stroke-linejoin="round"
                              d="M3 3v1.5M3 21v-6m0 0l2.77-.693a9 9 0 016.208.682l.108.054a9 9 0 006.086.71l3.114-.732a48.524 48.524 0 01-.005-10.499l-3.11.732a9 9 0 01-6.085-.711l-.108-.054a9 9 0 00-6.208-.682L3 4.5M3 15V4.5"/>
                    </svg>
                    <div>
                        <span class="text-sm font-medium text-cta-dark">{{ 'offer.signage'|trans|default('Balisage') }}</span>
                        <span class="ml-2 text-sm text-caractere">{{ detail.signage }}</span>
                    </div>
                </div>
            </div>
        {% endif %}

    </section>
{% endif %}

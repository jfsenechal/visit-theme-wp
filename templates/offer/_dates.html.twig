{% if offer.dates|length > 0 %}
    <div class="mt-6">
        <h3 class="font-montserrat-semi-bold text-lg text-caractere mb-3 flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                 stroke="currentColor" class="w-5 h-5 text-cta-dark">
                <path stroke-linecap="round" stroke-linejoin="round"
                      d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5"/>
            </svg>
            {{ 'offer.when'|trans|default('Quand ?') }}
        </h3>

        <ul class="space-y-2">
            {% for dateEvent in offer.dates %}
                <li class="flex flex-wrap items-center gap-x-3 gap-y-1 rounded-lg bg-gray-50 px-4 py-3 text-sm text-caractere">
                    {% if dateEvent.isSingleDay() %}
                        {% if dateEvent.startDate %}
                            <span class="font-montserrat-semi-bold">{{ dateEvent.startDate|format_date('full') }}</span>
                        {% endif %}
                    {% else %}
                        {% if dateEvent.dateRange %}
                            <span class="font-montserrat-semi-bold">{{ dateEvent.dateRange }}</span>
                        {% else %}
                            <span class="font-montserrat-semi-bold">Du {{ dateEvent.startDate|format_date('full') }} au {{ dateEvent.endDate|format_date('full') }}</span>
                        {% endif %}
                    {% endif %}

                    {% if dateEvent.openingHour1 %}
                        <span class="text-cta-dark">{{ dateEvent.openingHour1 }}</span>
                    {% endif %}

                    {% if dateEvent.closingHour1 %}
                        <span class="text-gray-500">- {{ dateEvent.closingHour1 }}</span>
                    {% endif %}

                    {% if dateEvent.openingHour2 %}
                        <span class="text-cta-dark">{{ dateEvent.openingHour2 }}</span>
                    {% endif %}

                    {% if dateEvent.closingHour2 %}
                        <span class="text-gray-500">- {{ dateEvent.closingHour2 }}</span>
                    {% endif %}

                    {% if dateEvent.openingDetails %}
                        <span class="w-full text-gray-600 mt-1">{{ dateEvent.openingDetails|raw }}</span>
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
    </div>
{% endif %}

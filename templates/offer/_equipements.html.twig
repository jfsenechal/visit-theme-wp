{# ── Equipment & Services ── #}
{% if offer.equipments|length > 0 or offer.equipmentOther %}
    <div class="mb-6">
        <h3 class="font-montserrat-semi-bold text-lg text-caractere mb-3 flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                 stroke="currentColor" class="w-5 h-5 text-cta-dark">
                <path stroke-linecap="round" stroke-linejoin="round"
                      d="M11.42 15.17L17.25 21A2.652 2.652 0 0021 17.25l-5.877-5.877M11.42 15.17l2.496-3.03c.317-.384.74-.626 1.208-.766M11.42 15.17l-4.655 5.653a2.548 2.548 0 11-3.586-3.586l6.837-5.63m5.108-.233c.55-.164 1.163-.188 1.743-.14a4.5 4.5 0 004.486-6.336l-3.276 3.277a3.004 3.004 0 01-2.25-2.25l3.276-3.276a4.5 4.5 0 00-6.336 4.486c.049.58.025 1.194-.14 1.743"/>
            </svg>
            {{ 'offer.equipments'|trans|default('Equipements & services') }}
        </h3>

        <div class="flex flex-wrap gap-2">
            {% for name, active in offer.equipments %}
                {% if active %}
                    <span
                        class="inline-flex items-center gap-1.5 rounded-md bg-blue-50 px-3 py-1.5 text-sm text-blue-800 ring-1 ring-blue-200/80 ring-inset">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor"
                             class="w-3.5 h-3.5 text-blue-500">
                            <path fill-rule="evenodd"
                                  d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.05-.143z"
                                  clip-rule="evenodd"/>
                        </svg>
                        {{ name }}
                    </span>
                {% endif %}
            {% endfor %}
        </div>

        {% if offer.equipmentOther %}
            <p class="mt-2 text-sm text-gray-600 italic">{{ offer.getEquipmentOther(locale) }}</p>
        {% endif %}
    </div>
{% endif %}

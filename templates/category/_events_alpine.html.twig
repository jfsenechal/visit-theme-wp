<ul class="pt-6 grid grid-cols-1 gap-2 xl:gap-4 xl:grid-cols-3"
    x-show="isLoading===false">
    <template x-for="item in offers" :key="item.id">
        <li class="rounded-lg shadow-lg">
            <a :href="item.url"
               class="group grid grid-cols-1 xl:grid-cols-2 overflow-hidden xl:block">
                <img :src="item.image" alt=""
                     class="justify-self-center self-center h-48 w-full rounded-t-lg opacity-100 transition-all duration-700 group-hover:scale-105 group-hover:opacity-60 lg:h-60"/>
                <div class="grid grid-cols-[6rem_1fr] xl:grid-cols-[8rem_1fr] my-2">
                    <div class="flex flex-col items-center justify-center border-x transition-all duration-700 group-hover:bg-cta-light group-hover:text-white">
                            <span class="font-montserrat-semi-bold text-xl"
                                  x-text="item.isPeriod === true ? ' > ' + item.shortCutDateEvent.day : '' + item.shortCutDateEvent.day">

                            </span>
                        <span class="" x-text="item.shortCutDateEvent.month"></span>
                        <span class="" x-text="item.shortCutDateEvent.year"></span>
                    </div>
                    <div class="flex flex-col items-start justify-center px-8">
                        <span x-text="item.name"></span>
                        <span class="text-sm text-gray-500 pt-2" x-text="item.locality"></span>
                    </div>
                </div>
            </a>
        </li>
    </template>
</ul>

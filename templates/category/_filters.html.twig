{% if filters|length > 1 %}
    <nav aria-label="Filtres par catÃ©gorie">
        <ul class="hidden xl:flex pt-6 flex-1 flex-wrap gap-2 w-3/5 my-2 mx-auto" role="list">
            <li class="rounded-md shadow-lg border border-cta-dark font-light"
                :class="activeFilter === null ? 'bg-cta-dark text-white' : 'hover:bg-cta-dark hover:text-white'">
                <a href="{{ parentCategoryUrl }}"
                   class="block p-3"
                   :aria-current="activeFilter === null ? 'true' : 'false'"
                   @click.prevent="showAll()">
                    Tout
                </a>
            </li>
            {% for item in filters %}
                <li class="rounded-md shadow-lg border border-cta-dark font-light"
                    :class="activeFilter === {{ item.id }} ? 'bg-cta-dark text-white' : 'hover:bg-cta-dark hover:text-white'">
                    <a href="{{ item.url }}"
                       class="block p-3"
                       :aria-current="activeFilter === {{ item.id }} ? 'true' : 'false'"
                       @click.prevent="fetchCategory({{ item.id }})">
                        {{ item.name }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    </nav>
{% endif %}

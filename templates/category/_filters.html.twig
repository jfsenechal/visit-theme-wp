{% if filters|length > 1 %}
    <nav aria-label="Filtres par catÃ©gorie" class="my-8 px-4 sm:px-6 lg:px-8">
        <ul role="list" class="flex flex-wrap justify-center gap-2">
            <li>
                <a href="{{ parentCategoryUrl }}"
                   :aria-current="activeFilter === null ? 'true' : 'false'"
                   @click.prevent="showAll()"
                   class="inline-flex items-center px-4 py-2 rounded-full text-sm font-montserrat font-medium
                          border border-cta-dark transition-all duration-300 cursor-pointer
                          focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-cta-dark"
                   :class="activeFilter === null
                       ? 'bg-cta-dark text-white shadow-md'
                       : 'bg-white text-cta-dark hover:bg-cta-dark hover:text-white hover:shadow-md'">
                    Tout
                </a>
            </li>
            {% for item in filters %}
                <li>
                    <a href="{{ item.url }}"
                       :aria-current="activeFilter === {{ item.id }} ? 'true' : 'false'"
                       @click.prevent="fetchCategory({{ item.id }})"
                       class="inline-flex items-center px-4 py-2 rounded-full text-sm font-montserrat font-medium
                              border border-cta-dark transition-all duration-300 cursor-pointer
                              focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-cta-dark"
                       :class="activeFilter === {{ item.id }}
                           ? 'bg-cta-dark text-white shadow-md'
                           : 'bg-white text-cta-dark hover:bg-cta-dark hover:text-white hover:shadow-md'">
                        {{ item.name }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    </nav>
{% endif %}

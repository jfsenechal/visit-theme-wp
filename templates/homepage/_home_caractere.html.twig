<section class="relative py-20 sm:py-28 bg-pastel/40 overflow-hidden" aria-labelledby="heading-caractere">
    {# Decorative background element #}
    <div class="absolute top-0 right-0 w-64 h-64 bg-cta-light/5 rounded-full -translate-y-1/2 translate-x-1/3" aria-hidden="true"></div>
    <div class="absolute bottom-0 left-0 w-48 h-48 bg-cta-dark/5 rounded-full translate-y-1/3 -translate-x-1/4" aria-hidden="true"></div>

    <div class="relative mx-auto max-w-4xl px-4 sm:px-6 lg:px-8 text-center">
        <div class="space-y-3 mb-8">
            <span class="inline-block text-sm sm:text-base font-semibold tracking-[0.3em] uppercase text-cta-dark">
                MARCHE
            </span>
            <h2 id="heading-caractere"
                class="text-3xl sm:text-4xl lg:text-5xl font-bold text-caractere leading-tight">
           {{ 'city.character'|trans }}
            </h2>
            <div class="mx-auto w-16 h-1 bg-cta-light rounded-full" aria-hidden="true"></div>
        </div>
        <div class="text-lg sm:text-xl text-grey-dark/80 leading-relaxed max-w-3xl mx-auto prose prose-lg">
            {{ intro|raw }}
        </div>
    </div>
</section>

<div class="space-y-8">
    <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-white tracking-tight leading-tight drop-shadow-lg">
        {{ 'decouvrez.marche'|trans }}<br/>
        <span class="text-cta-light">Marche-en-Famenne</span>
    </h1>

    <form role="search"
          action="/{{ locale }}/"
          class="mx-auto max-w-xl">
        <label for="search" class="sr-only">{{ 'search.name'|trans }}</label>
        <div class="relative group">
            <input id="search"
                   type="search"
                   name="s"
                   placeholder="{{ 'search.placeholder'|trans }}..."
                   class="w-full rounded-full border-0 bg-white/95 backdrop-blur-sm py-4 pl-6 pr-14
                          text-gray-800 text-lg placeholder:text-gray-400
                          shadow-xl shadow-black/10
                          ring-2 ring-transparent
                          focus:bg-white focus:ring-cta-light focus:outline-none
                          transition-all duration-300"/>
            <button type="submit"
                    class="absolute right-2 top-1/2 -translate-y-1/2
                           flex items-center justify-center
                           w-10 h-10 rounded-full
                           bg-cta-light text-white
                           hover:bg-cta-dark focus:bg-cta-dark
                           focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2
                           transition-colors duration-200"
                    aria-label="{{ 'search.name'|trans }}">
                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z"/>
                </svg>
            </button>
        </div>
    </form>
</div>

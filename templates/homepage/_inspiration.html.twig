<div class="flex flex-col sm:flex-row sm:items-end sm:justify-between gap-4 mb-10">
    <h2 id="heading-inspirations"
        class="text-3xl sm:text-4xl font-bold text-caractere">
        {{ 'inspiration.home'|trans }}
    </h2>
    <a href="{{ urlInspiration }}"
       title="Toutes les inspirations"
       class="group inline-flex items-center gap-2 text-cta-dark font-semibold
              hover:text-cta-light transition-colors duration-200
              focus:outline-none focus:underline">
        {{ 'all.experiences'|trans }}
        <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform duration-200"
             xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
             stroke-width="2" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5"/>
        </svg>
    </a>
</div>

{# Bento-style grid: first item large, rest smaller #}
<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6">
    {% for key, item in inspirations %}
        <a href="{{ item.url }}"
           class="group relative block overflow-hidden rounded-2xl
                  {{ key == 0 ? 'sm:col-span-2 sm:row-span-2 aspect-[4/3] sm:aspect-auto sm:min-h-[400px]' : 'aspect-[4/3]' }}
                  shadow-md hover:shadow-xl
                  transition-shadow duration-300
                  focus:outline-none focus:ring-4 focus:ring-cta-light/50 focus:ring-offset-2">
            {# Image #}
            {% if item.image %}
                <img src="{{ item.image }}"
                     alt="{{ item.name }}"
                     loading="lazy"
                     class="absolute inset-0 h-full w-full object-cover
                            group-hover:scale-105
                            transition-transform duration-500 ease-out"/>
            {% endif %}

            {# Gradient overlay #}
            <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/20 to-transparent
                        group-hover:from-black/80
                        transition-all duration-300"
                 aria-hidden="true"></div>

            {# Tags #}
            {% if item.tags|length > 0 %}
                <div class="absolute top-4 left-4 flex flex-wrap gap-2">
                    {% for tag in item.tags %}
                        <span class="inline-block px-3 py-1 text-xs font-semibold text-white
                                     bg-cta-light/80 backdrop-blur-sm rounded-full">
                            {{ tag.name }}
                        </span>
                    {% endfor %}
                </div>
            {% endif %}

            {# Title #}
            <div class="absolute inset-x-0 bottom-0 p-5 sm:p-6">
                <h3 class="text-lg sm:text-xl {{ key == 0 ? 'lg:text-2xl' : '' }} font-bold text-white
                           group-hover:translate-y-0 transition-transform duration-300">
                    {{ item.name }}
                </h3>
                {% if item.description %}
                    <p class="mt-2 text-sm text-white/80 line-clamp-2
                              {{ key == 0 ? '' : 'hidden sm:block' }}">
                        {{ item.description }}
                    </p>
                {% endif %}
            </div>
        </a>
    {% endfor %}
</div>

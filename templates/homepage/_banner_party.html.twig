<section class="relative py-20 sm:py-28 overflow-hidden" aria-label="{{ 'different.festivities'|trans }}">
    {# Background with parallax-like effect #}
    <div class="absolute inset-0" aria-hidden="true">
        <img src="{{ template_uri() }}/assets/images/bg_party.png"
             alt=""
             role="presentation"
             class="h-full w-full object-cover"/>
        <div class="absolute inset-0 bg-gradient-to-r from-party/90 via-party/70 to-transparent"></div>
    </div>

    <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="max-w-lg">
            <img src="{{ template_uri() }}/assets/tartine/img_cat01.png"
                 alt=""
                 role="presentation"
                 class="w-20 h-20 sm:w-24 sm:h-24 object-contain mb-6"/>
            <h2 class="text-3xl sm:text-4xl font-bold text-caractere mb-6 leading-tight">
                {{ 'different.festivities'|trans }}
            </h2>
            <a href="/{{ locale }}/?cat=12"
               class="inline-flex items-center gap-2
                      px-8 py-3.5 rounded-full
                      bg-cta-light text-white font-semibold text-lg
                      hover:bg-cta-dark
                      shadow-lg shadow-cta-light/30 hover:shadow-cta-dark/30
                      transition-all duration-300
                      focus-visible:outline-none focus-visible:ring-4 focus-visible:ring-cta-light/50 focus-visible:ring-offset-2">
                {{ 'discover_them'|trans }}
                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3"/>
                </svg>
            </a>
        </div>
    </div>
</section>

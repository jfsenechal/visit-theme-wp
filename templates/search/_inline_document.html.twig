<li class="py-4 flex items-center justify-between">
    <div class="group block w-full">
        <a href="{{ result.link }}" class="font-semibold text-cta-dark group-hover:text-citoyen transition-colors">
            {{ result.name }}
        </a>
        <div class="flex flex-row gap-2 mt-2">
            {% if result.site|length > 0 %}
                <span class="text-sm text-gray-500">
                    {{ result.site.name }}
                </span>
            {% endif %}
            {# Breadcrumb path #}
            {% if result.source != 'local' %}
                <div class="flex items-center gap-1.5 text-xs text-slate-400">
                    <i class="fas fa-sitemap text-[10px]"></i>
                    <span class="text-slate-300">/</span>
                    <span>{{ result.source }}</span>
                </div>
            {% endif %}
            {% if result.tags|length > 0 %}
                <div class="flex items-center gap-1.5 text-xs text-slate-400">
                    <i class="fas fa-sitemap text-[10px]"></i>
                    {% for tag in result.tags %}
                        {% if not loop.first %}<span class="text-slate-300">/</span>{% endif %}
                        <span>{{ tag.name }}</span>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>
    <svg class="h-5 w-5 text-gray-400 group-hover:text-cta-dark transition-colors" fill="none"
         viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
    </svg>
</li>
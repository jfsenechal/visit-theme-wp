<main id="main-content">
    {# === HERO: Full-viewport with search + category icons === #}
    <section class="relative min-h-[85vh] flex flex-col items-center justify-center overflow-hidden"
             aria-label="{{ 'search.name'|trans }}">
        <div class="absolute inset-0 z-0">
            <img src="{{ template_uri() }}/assets/images/bg/{{ bgimg }}"
                 alt=""
                 role="presentation"
                 class="h-full w-full object-cover object-center-center"/>
            <div class="absolute inset-0 bg-linear-to-b from-black/50 via-black/30 to-black/60"></div>
        </div>

        <div class="relative z-10 w-full max-w-4xl mx-auto px-4 sm:px-6 text-center">
            {% include '@Visit/homepage/_search_home.html.twig' %}
        </div>

        <div class="relative z-10 w-full mt-8 sm:mt-12">
            {% include '@Visit/homepage/_icons_home.html.twig' %}
        </div>

        {# Scroll indicator #}
        <div class="absolute bottom-6 left-1/2 -translate-x-1/2 z-10 animate-bounce">
            <svg class="w-6 h-6 text-white/70" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
            </svg>
        </div>
    </section>

    {# === VILLE DE CARACTERE: Intro section === #}
    {% include '@Visit/homepage/_home_caractere.html.twig' %}

    {# === INSPIRATIONS: Featured content grid === #}
    <section class="py-16 sm:py-20 bg-white" aria-labelledby="heading-inspirations">
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
            {% include '@Visit/homepage/_inspiration.html.twig' %}
        </div>
    </section>

    {# === AGENDA: Upcoming events === #}
    <section class="py-16 sm:py-20 bg-bglighter" aria-labelledby="heading-agenda">
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
            {% include '@Visit/homepage/_agenda.html.twig' %}
        </div>
    </section>

    {# === IDEAS: Trip ideas by audience === #}
    <section class="py-16 sm:py-20 bg-white" aria-labelledby="heading-ideas">
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
            {% include '@Visit/homepage/_ideas.html.twig' %}
        </div>
    </section>

    {# === FESTIVITIES BANNER: Full-width CTA === #}
    {% include '@Visit/homepage/_banner_party.html.twig' %}
</main>

{# === PARTNERS: Logo strip === #}
{% include '@Visit/homepage/_partenaires.html.twig' %}
